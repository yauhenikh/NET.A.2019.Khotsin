@model BLL.Interface.BankAccount

@{
    ViewBag.Title = "Transfer";
}

<h2>Transfer</h2>

@using (Html.BeginForm())
{
    <input type="hidden" value="@Model.Id" name="id" />

    <table>
        <tr>
            <td><p>Enter amount to transfer: </p></td>
            <td><input type="number" step="0.01" min="0.01" name="amount" required /> </td>
        </tr>
        <tr>
            <td><p>Enter number of account to transfer: </p></td>
            <td><input type="number" step="1" min="1" name="receiverId" required /> </td>
        </tr>
        <tr>
            <td><input type="submit" value="Save" class="btn btn-default" /> </td>
            <td></td>
        </tr>
    </table>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
